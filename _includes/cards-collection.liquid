{% assign sorted_collection = site.data.hardware-partners | sort: 'name' %}

<div class="card-collection" id="card-collection">
    {% for card in sorted_collection %}
        <a class="card" href="#" id="{{ card.type | join: '|' }}">
            <div class="card-wrapper">
                <div class="card-image">
                    <img class="logo" src="{{ card.logo }}" alt="{{ card.name }} logo" loading="lazy">
                </div>
                <span class="crisp">Test</span>
                <p class="card-title">{{ card.name }}</p>
                <p class="card-description">{{ card.description }}</p>
                <div class="card-link-wrapper">
                    <span class="card-link" href="#">
                        Learn more
                        <i class="fas fa-chevron-right arrow first" style="color: #2a7dec"></i>
                        <i class="fas fa-chevron-right arrow second" style="color: #2a7dec"></i>
                        <i class="fas fa-chevron-right arrow third" style="color: #2a7dec"></i>
                    </span>
                </div>
            </div>
        </a>
    {% endfor %}
</div>
